<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <View
        android:layout_below="@+id/content"
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/DEDEDE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44.5dp"
        android:layout_below="@+id/line1"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:background="@drawable/ripple_bg_left_bottom"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:ellipsize="end"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:maxLines="2"
            android:gravity="center"
            android:id="@+id/left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="leftleftleftleftleftleft"
            android:textColor="@color/C222222"
            android:textSize="14sp" />

        <View
            android:id="@+id/line2"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/DEDEDE" />


        <TextView
            android:background="@drawable/ripple_bg_right_bottom"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:ellipsize="end"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:maxLines="2"
            android:gravity="center"
            android:id="@+id/right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="rightrightrightrightright"
            android:textColor="@color/C222222"
            android:textSize="14sp" />
    </LinearLayout>

</merge>