<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg">

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18.6dp"
        android:layout_marginLeft="37.3dp"
        android:layout_marginRight="37.3dp"
        android:layout_marginTop="37.3dp"
        android:gravity="center_horizontal"
        android:text="正确填写右侧验证码重新获取短信"
        android:textColor="#222222"
        android:textSize="18.6sp" />

    <ImageView
        android:id="@+id/code"
        android:layout_width="86.6dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt"
        android:layout_marginBottom="37.3dp"
        android:layout_marginRight="37.3dp" />

    <EditText
        android:id="@+id/editText"
        style="@style/edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/txt"
        android:maxLength="4"
        android:layout_marginLeft="37.3dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/code"
        android:layout_toStartOf="@+id/code" />


    <TextView
        android:id="@+id/txt_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_marginLeft="37.3dp"
        android:layout_marginTop="8dp"
        android:text="验证码错误"
        android:textColor="#FF0000"
        android:textSize="14.6sp" />

    <RelativeLayout
        android:id="@+id/state"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/txt"
        android:layout_toLeftOf="@+id/code"
        android:layout_toStartOf="@+id/code">

        <ImageView
            android:id="@+id/clear"
            android:layout_width="19.3dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:background="@drawable/clear"
            android:layout_height="19.3dp" />

        <ImageView
            android:id="@+id/load"
            android:layout_width="16dp"
            android:layout_centerInParent="true"
            android:background="@drawable/edit_load"
            android:layout_height="16dp" />

    </RelativeLayout>


</RelativeLayout>