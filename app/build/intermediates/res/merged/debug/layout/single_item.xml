<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="false"
    android:background="#fff"
    android:clipToPadding="false"
    android:orientation="horizontal"
    android:padding="10dp"
    android:paddingRight="0dp"
    android:weightSum="100">

    <TextView
        android:id="@+id/no"
        android:layout_width="@dimen/_12sdp"
        android:layout_height="match_parent"
        android:layout_weight="20"
        android:gravity="center"
        android:text="S.no"
        android:textSize="@dimen/_12sdp" />

    <LinearLayout
        android:layout_width="@dimen/_30sdp"
        android:layout_height="wrap_content"
        android:layout_weight="40"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_weight="0.5"
            android:background="#fff">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:maxLines="1"
                android:text="Name of Item"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.20"
    android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:textSize="@dimen/_10sdp"
        android:text="MRP:₹"/>

    <EditText
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:fontFamily="monospace"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:text="₹46"
        android:textSize="@dimen/_10sdp" />
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discount:₹"
            android:layout_weight="0.5"
            android:textSize="@dimen/_10sdp" />

            <EditText
                android:id="@+id/item_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:text="0.0"
                android:textSize="@dimen/_10sdp" />
            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/_20sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_weight="30"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/minus"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_gravity="center"
            android:background="@drawable/minus05"
            android:padding="2dp" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="2"
            android:textSize="@dimen/_12sdp" />

        <ImageButton
            android:id="@+id/plus"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_gravity="center"
            android:background="@drawable/plus05" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/_12sdp"
        android:layout_height="match_parent"
        android:layout_gravity="right|center_vertical|end"
        android:layout_marginLeft="@dimen/_15sdp"
        android:baselineAligned="false"
        android:foregroundGravity="right"
        android:gravity="end">

        <ImageButton
            android:id="@+id/delete"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="center"
            android:background="@drawable/delete16" />
    </LinearLayout>
</LinearLayout>
