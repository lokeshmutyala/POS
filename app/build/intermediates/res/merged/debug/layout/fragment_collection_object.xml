<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_280sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="@dimen/_2sdp"
    app:cardCornerRadius="@dimen/_3sdp"
    app:cardElevation="@dimen/_5sdp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp">

        <LinearLayout
            android:id="@+id/invlayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_15sdp"
            android:background="@drawable/layoutbuton"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:src="@android:drawable/ic_input_get" />

            <TextView
                android:id="@+id/tid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="INVxxx1"
                android:textIsSelectable="false"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/invinfo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@+id/invlayout"
            android:background="@drawable/layoutbuton"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_1sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile:  "
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/mobileno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:text="Customer Mobile"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Taxes  : ₹ "
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/taxes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:text="Total Taxes"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total    : ₹ "
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:text="Total"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/invlist"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_185sdp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/invinfo"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/layoutbuton" />
    </RelativeLayout>

</android.support.v7.widget.CardView>

